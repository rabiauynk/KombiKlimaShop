 @model List<ShopWebUI.Dtos.CampaignDtos.ResultCampaignDto>
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Kampanyalar</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="index.html">Anasayfa</a></li>
            <li class="breadcrumb-item active text-primary">Kampanyalar</li>
        </ol>
    </div>
</div>
<!-- Services Start -->
<div class="container-fluid service pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
        </div>

        
        <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-6 col-lg-4 wow fadeInUp">
                <div class="service-item">
                    <div class="blog-img">
                        <img src="~/news-images/@post.ImageUrl" class="img-fluid rounded-top w-100" alt="Image">
                    </div>
                    <div class="rounded-bottom p-4">
                        <a href="#" class="h4 d-inline-block mb-4">@post.CampaignTitle</a>
                        <p class="mb-4 fw-bold">
                            Değerli İş Ortağımız,
                        </p>
                        <p>
                            @post.Description
                        </p>
                        <p>
                            Açıklama:
                            @post.CampaignDetail
                        </p>
                        <a class="btn btn-primary rounded-pill py-2 px-4" href="#">Devamını Oku</a>
                    </div>
                </div>
            </div>
        }

  
    </div>
</div>
<!-- Services End -->
@model CreateDealerDto
@{
    ViewData["Title"] = "CreateDealer";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Firma İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    }

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Firma Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="dealername">Firma Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="DealerName" id="dealername">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="dealerowner">Firma Sahibini Giriniz</label>
                                <input type="text" class="form-control" asp-for="DealerOwner" id="dealerowner">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="dealeraddress">Firma Adresini Giriniz</label>
                                <input type="text" class="form-control" asp-for="DealerAddress" id="dealeraddress">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="dealercity">Firma Şehrini Giriniz</label>
                                <input type="text" class="form-control" asp-for="DealerCity" id="dealercity">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="dealerdistrict">Firma İlçesini Giriniz</label>
                                <input type="text" class="form-control" asp-for="DealerDistrict" id="dealerdistrict">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="phone">Telefon Numarası Giriniz</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="imageurl">Ürün Görselini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="dealerCategory">Ürün Kategorisini Seçiniz</label>
                                @Html.DropDownListFor(
                                         x => x.DealerCategoryID,
                                         (IEnumerable<SelectListItem>)ViewData["DealerCategories"],
                                         "Ürün Kategorisini Seçiniz",
                                         new { @class = "form-control" }
                                         )
                            </div>
                        </div>
                    
                        <div class="card-action">
                            <button class="btn btn-primary">Firma Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


